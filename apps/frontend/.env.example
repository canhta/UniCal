# Frontend Environment Variables
# Copy this file to .env.local and update with your actual values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Auth0 Configuration (V4 Format)
# Obtain these values from your Auth0 Dashboard
AUTH0_SECRET=use_a_long_random_value_for_production_here_at_least_32_characters
APP_BASE_URL=http://localhost:3001
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_CLIENT_SECRET=your_auth0_client_secret_here

# Calendar Integration URLs (Optional - for direct frontend integration)
NEXT_PUBLIC_GOOGLE_CALENDAR_URL=https://calendar.google.com
NEXT_PUBLIC_OUTLOOK_CALENDAR_URL=https://outlook.office.com

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# Analytics (Optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_HOTJAR_ID=

# Development Settings
NODE_ENV=development
