DATABASE_URL="postgresql://unical_user:unical_password@localhost:5432/unical_db?schema=public"

REDIS_HOST=localhost
REDIS_PORT=6379

# Backend server port
PORT=3000

# Replace with your actual secrets and credentials
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d
TOKEN_ENCRYPTION_KEY=

# Auth0 Configuration
AUTH0_DOMAIN=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_AUDIENCE=
AUTH0_ISSUER_URL=
AUTH0_CALLBACK_URL=http://localhost:3001/api/auth/callback

# Google OAuth Credentials (obtain from Google Cloud Console)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# This should match the redirect URI configured in your Google Cloud Console project
# and point to your backend's callback endpoint (now on port 3000).
GOOGLE_REDIRECT_URI=http://localhost:3000/api/connect/google/callback

# Microsoft OAuth Credentials (obtain from Azure Portal)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
# This should match the redirect URI configured in your Azure AD application
# and point to your backend's callback endpoint (now on port 3000).
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/connect/microsoft/callback
